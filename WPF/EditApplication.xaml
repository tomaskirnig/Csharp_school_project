<Window x:Class="WPF.EditApplication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="EditApplication" Height="450" Width="800">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" ShowGridLines="False" Width="800" Height="450">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Highschool" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="cmbSchool" Margin="45,20,45,15"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Specialization 1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="cmbSpecialization1" Margin="45,20,45,15"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Specialization 2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="2" Grid.Column="1" x:Name="cmbSpecialization2" Margin="45,20,45,15"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Specialization 3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="3" Grid.Column="1" x:Name="cmbSpecialization3" Margin="45,20,45,15"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Student" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="4" Grid.Column="1" x:Name="cmbStudent" Margin="45,20,45,15"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Date of creation" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding DateOfCreation}" x:Name="txtDateOfCreation" Margin="45,20,45,15"/>

        <Button Grid.Row="6" Grid.Column="0" Content="Save" Click="Save_Button_Click" Margin="155,10,155,30"/>
        <Button Grid.Row="6" Grid.Column="1" Content="Cancel" Click="Cancel_Button_Click" Margin="155,10,155,30"/>
    </Grid>
</Window>
