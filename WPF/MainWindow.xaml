<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Administration System" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Application Management">
                <Grid Margin="10">
                    <Button Content="Add New Application" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Click="AddApplication_Click"/>
                    <Button Content="Edit/Delete Application" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="160,0,0,0" Width="150" Click="EditDeleteApplication_Click" />
                    <Button Content="Report" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="594,0,0,0" Width="150" Click="MakeReport" />
                </Grid>
            </TabItem>
            <TabItem Header="Highschool Management">
                <Grid Margin="10">
                    <Button Content="Add New School" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Click="AddSchool_Click" />
                    <Button Content="Add New Specialization" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="160,0,0,0" Click="AddSpecialization_Click" />
                    <Button Content="Edit/Delete School" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,45,0,0" Width="150" Click="EditDeleteSchool_Click" />
                    <Button Content="Edit/Delete Specialization" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="160,45,0,0" Width="150" Click="EditDeleteSpecialization_Click" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
